        if (scForm) {
          scForm.browser.attachEvent(window, "onload", function(evt) { correctSize(); });
        }
      </script>

      <CodeBeside Type="Sitecore.Shell.Applications.Dialogs.CustomizeRibbon.CustomizeRibbonForm,Sitecore.Client"/>

      <GridPanel Width="100%" Height="100%" Cellpadding="0" Style="table-layout:fixed">
